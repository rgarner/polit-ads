<% @groups.each do |group| %>
  <% utm_index, utm_values = group.first, group.last %>
  <h2><%= link_to "utm#{utm_index}", utm_campaign_value_path(utm_index) %></h2>
  <ul class="tag-list">
    <% utm_values.each do |value| %>
      <li><%= value %> (<%= link_to "#{value.count} adverts", adverts_by_utm_value_path(value.value) %>)</li>
    <% end %>
  </ul>
<% end %>
