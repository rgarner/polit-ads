<h1>
  <%= link_to "utm#{@value.index}", utm_campaign_value_path(@value) %>:
  <%= @value.value  %>
</h1>
<h2><%= @adverts.count %> adverts</h2>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col" width="60%">Advert</th>
      <th scope="col" class="external_url" width="25%">External URL</th>
      <th scope="col" width="15%">Ad creation time</th>
    </tr>
  </thead>
  <tbody>
    <% @adverts.each do |advert| %>
      <tr>
        <td><%= link_to advert.ad_creative_body, advert_path(advert) %></td>
        <td class="url"><%= link_to advert.external_url, advert.external_url %></td>
        <td><%= advert.ad_creation_time %></td>
      </tr>
    <% end %>
  </tbody>
</table>
