<h2><%= page_entries_info @adverts %></h2>

<%= paginate @adverts %>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col" class="external_url" width="20%">Show</th>
      <th scope="col" width="65%">External Advert</th>
      <th scope="col" width="15%">Ad creation time</th>
    </tr>
  </thead>
  <tbody>
  <% @adverts.each do |advert| %>
    <tr>
      <td class="url">
        <div class="btn-group-sm">
          <%= link_to 'Decoded', decoding_path(advert), class: 'btn btn-outline-info' %>
          <%= link_to 'Raw', advert_path(advert), class: 'btn btn-outline-primary' %>
        </div>
      </td>
      <td><%= link_to (advert.ad_creative_body || advert.ad_creative_link_title), advert.external_url %></td>
      <td><%= advert.ad_creation_time %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @adverts %>
